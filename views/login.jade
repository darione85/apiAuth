extends layout
block content
    .container
        form.form-horizontal(role='form', method='POST', action='login')
            .row
                .col-md-3
                .col-md-6
                    h2 Please Login
                    hr
            .row
                .col-md-3
                .col-md-6
                    .form-group.has-danger
                        label.sr-only(for='email') E-Mail Address
                        .input-group.mb-2.mr-sm-2.mb-sm-0
                            .input-group-addon(style='width: 2.6rem')
                                i.fa.fa-at
                            input#email.form-control(type='text', name='email', placeholder='you@example.com', required='', autofocus='')
                .col-md-3
                    .form-control-feedback
                        span.text-danger.align-middle
                            i.fa.fa-close
                            |  Example error message
            .row
                .col-md-3
                .col-md-6
                    .form-group
                        label.sr-only(for='password') Password
                        .input-group.mb-2.mr-sm-2.mb-sm-0
                            .input-group-addon(style='width: 2.6rem')
                                i.fa.fa-key
                            input#password.form-control(type='password', name='password', placeholder='Password', required='')
                .col-md-3
                    .form-control-feedback
                        span.text-danger.align-middle
                            // Put password error message here
            .row
                .col-md-3
                .col-md-6(style='padding-top: .35rem')
                    .form-check.mb-2.mr-sm-2.mb-sm-0
                        label.form-check-label
                            input.form-check-input(name='remember', type='checkbox')
                            span(style='padding-bottom: .15rem') Remember me
            .row(style='padding-top: 1rem')
                .col-md-3
                .col-md-6
                    button.btn.btn-success(type='submit')
                        i.fa.fa-sign-in
                        |  Login
                    a.btn.btn-link(href='/password/reset') Forgot Your Password?
