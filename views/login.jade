extends layout
block content
    .container
        form(class="form-horizontal" role="form" method="POST" action="/login")
            .row
                .col-md-3
                .col-md-6
                    h2 Please Login
                    hr
            .row
                .col-md-3
                .col-md-6
                    .form-group.has-danger
                        label(for="email").sr-only Email Address
                        div(style="width: 2.6rem").input-group-addon
                            i.fa.fa-at
                        input(type="text" name="email" class="form-control" id="email" placeholder="you@example.com" required autofocus)
                .col-md-3
                    .form-control-feedback
                        span.text-danger.align-middle Example Error Message
                            i.fa.fa-close
            .row
                .col-md-3
                .col-md-6
                    .form-group
                        label(for="password").sr-only Password
                        .input-group.mb-2.mr-sm-2.mb-sm-0
                            div(style="width: 2.6rem").input-group-addon
                                i.fa.fa-key
                            input(type="password" name="password" class="form-control" id="password" placeholder="Password" required)
                .col-md-3
                    .form-control-feedback
                        span.text-danger.align-middle password error message
